{
  "name": "keybr-ext",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension hides the ads in the website keybr.com",
  "homepage_url": "github.com/brandon6190/keybr-ext",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Hide Ads",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "https://www.keybr.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}